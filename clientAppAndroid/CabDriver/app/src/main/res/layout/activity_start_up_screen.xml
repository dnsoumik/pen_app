<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_up_screen_back_v2"
    tools:context=".StartUpScreen">


    <ImageView
        android:id="@+id/niljyoti_logo"
        android:layout_width="169dp"
        android:layout_height="169dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        android:src="@drawable/front_app_icon"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/niljyoti_logo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:fontFamily="cursive"
        android:text="@string/safe_and_smart"
        android:textColor="#FFFFFF"
        android:textSize="15pt"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/background_border"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_border_an"
        tools:ignore="ContentDescription" />
</RelativeLayout>
