<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="vts.xlayer.cab.niljyoti.driver.authorization.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/app_icon"
            tools:ignore="ContentDescription"></ImageView>

        <View
            android:id="@+id/verline1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@android:color/darker_gray"></View>

        <ProgressBar
            android:id="@+id/sign_in_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="80sp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/sign_in_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/otp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="@string/stay_connected_with_trakiga"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/opt_details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/otp_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30sp"
                android:text="@string/a_verification_alert"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/country_and_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opt_details"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp">

                <EditText
                    android:id="@+id/countryCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="4"
                    android:text="@string/country_code"
                    android:textSize="26sp"
                    tools:ignore="LabelFor,TextFields" />

                <EditText
                    android:id="@+id/sign_in_mobile_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_weight="3"
                    android:hint="@string/prompt_mobile_number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textSize="26sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/sign_in_dev_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/country_and_mobile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/lick_icon"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginTop="5sp"
                    android:contentDescription="TODO"
                    android:src="@drawable/link_icon"
                    tools:ignore="ContentDescription,HardcodedText" />

                <EditText
                    android:id="@+id/dev_website_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3sp"
                    android:layout_toEndOf="@+id/lick_icon"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/default_server_url"
                    android:textColor="#000"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />
            </RelativeLayout>

            <Button
                android:id="@+id/sign_in_next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_in_dev_link"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100sp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/curved_area"
                android:text="@string/next_button_text"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute" />

            <RelativeLayout
                android:id="@+id/reg_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_in_next_button"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/new_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/don_t_have_any_account"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/register_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_toEndOf="@+id/new_text_view"
                    android:text="@string/register_now"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>

            <TextView
                android:id="@+id/hav_trb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_view"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/carrier_sms_charges_may_apply"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>